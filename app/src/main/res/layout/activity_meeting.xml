<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <include layout="@layout/my_toolbar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/orange_light"
        android:elevation="1dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="编辑资料"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginBottom="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bigImg"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/bg_primary"
                android:elevation="1dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_8"
                android:background="@color/bg_primary"
                android:elevation="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    style="@style/text_16_pri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:text="关于新产品的售价" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorDivider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/text_16_pri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:text="创建人" />

                    <TextView
                        android:id="@+id/user_name"
                        style="@style/text_16_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_toStartOf="@+id/user_avatar"
                        android:text="市场部" />

                    <com.android.renly.meetingreservation.widget.CircleImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:src="@drawable/ic_user_placeholder"
                        android:tint="@color/colorDivider" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorDivider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_primary"
                    android:elevation="1dp"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_8"
                    android:paddingEnd="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_8">

                    <TextView
                        style="@style/text_16_pri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="会议室地点" />

                    <TextView
                        android:id="@+id/tv_location"
                        style="@style/text_16_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:layout_toStartOf="@+id/iv_location"
                        android:text="国际创意园-1幢" />

                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_location_on_black_24dp" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@color/bg_primary"
                android:elevation="1dp"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_8"
                android:paddingEnd="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_16_pri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="与会人员" />

                    <TextView
                        android:id="@+id/people"
                        style="@style/text_16_pri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(16)" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <com.android.renly.meetingreservation.widget.CircleImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/ic_user_placeholder" />

                    <com.android.renly.meetingreservation.widget.CircleImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:src="@drawable/ic_user_placeholder" />


                    <com.android.renly.meetingreservation.widget.CircleImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:src="@drawable/ic_user_placeholder" />

                    <com.android.renly.meetingreservation.widget.CircleImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:src="@drawable/ic_user_placeholder" />

                    <com.android.renly.meetingreservation.widget.CircleImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:src="@drawable/ic_user_placeholder" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginStart="@dimen/dimen_4"
                        android:src="@drawable/ic_chevron_right_black_24dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@color/bg_primary"
                android:elevation="1dp"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_8"
                android:paddingEnd="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_8">

                <TextView
                    style="@style/text_16_pri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会议简介" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:background="@color/colorDivider" />

                <TextView
                    style="@style/text_14_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/meeting_intro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@color/bg_primary"
                android:elevation="1dp"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_8"
                android:paddingEnd="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_8">

                <TextView
                    style="@style/text_16_pri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会议文件" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@color/colorDivider" />

                <include layout="@layout/item_folder_s" />

                <include layout="@layout/item_folder_s" />

                <include layout="@layout/item_folder_s" />

                <include layout="@layout/item_folder_s" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
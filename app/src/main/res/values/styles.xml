<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:listDivider">@drawable/my_divider</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bg_primary</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!--切换activity时屏幕不变暗-->
        <item name="android:windowIsTranslucent">true</item>
        <!--窗口的背景设置成透明 ,这样的话在我们每个界面的根布局都要设置background,要不然就是透明的-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.normal" parent="BaseTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="text_18_pri">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_18_sec">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_sec</item>
    </style>

    <style name="text_18_thi">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_thi</item>
    </style>

    <style name="text_16_sec">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_sec</item>
    </style>

    <style name="text_16_pri">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_16_thi">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_thi</item>
    </style>

    <style name="text_14_sec">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_sec</item>
    </style>

    <style name="text_14_pri">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_12_sec">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/text_color_sec</item>
    </style>

    <style name="text_12_pri">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="mine_btn_num">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="evaluate_theme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_evaluate</item>
    </style>

    <style name="booking_tip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/main_item</item>
    </style>
    
    <style name="list_tip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">#CC000000</item>
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Holo.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!-- 标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 还可以加入一些弹出和退出的动画 (lan)-->

        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>

    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_radio_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/radiobutton</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dialog_item_text</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>

    </style>
</resources>
